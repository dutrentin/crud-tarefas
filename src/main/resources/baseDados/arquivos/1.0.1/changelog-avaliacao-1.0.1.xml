        <changeSet id="1.0.1.4" author="Eduardo Trentin">
            <preConditions onFail="MARK_RAN" onFailMessage="Erro ao adicionar coluna CD_USER na tabela TASK">
                <not>
                    <columnExists tableName="TASK" columnName="CD_USER" />
                </not>
            </preConditions>
            <comment>Adicionar coluna 'CD_USER' na tabela 'TASK'</comment>

            <addColumn tableName="TASK">
                <column name="CD_USER" type="NUMBER(19)">
                    <constraints nullable="false" foreignKeyName="FK_TASK_USER_TASK" references="USER_TASK(CD_USER)" />
                </column>
            </addColumn>
            <rollback>
                ALTER TABLE TASK DROP COLUMN CD_USER;
            </rollback>
        </changeSet>




</databaseChangeLog>
