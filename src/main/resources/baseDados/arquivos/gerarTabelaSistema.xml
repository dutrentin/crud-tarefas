<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">


    <changeSet id="1.0.0" author="Eduardo Trentin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="USUARIO"/>
            </not>
        </preConditions>
        <comment>Padrão para arquitetura de API - Tabela Usuario</comment>
        <sql>
            CREATE TABLE USUARIO (
            CD_USUARIO INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
            NM_USUARIO VARCHAR(50),
            DS_SENHA VARCHAR(30),
            PRIMARY KEY (CD_USUARIO)
            );
        </sql>
        <rollback>
            <sql>
                DROP TABLE USUARIO;
            </sql>
        </rollback>
    </changeSet>

    <changeSet id="1.0.1" author="Eduardo Trentin">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="TAREFA"/>
            </not>
        </preConditions>
        <comment>Padrão para arquitetura de API - Tabela </comment>
        <sql>
            CREATE TABLE TAREFA (
            CD_TAREFA INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
            DS_TAREFA VARCHAR(255),
            PRIMARY KEY (CD_TAREFA)
            );
        </sql>
        <rollback>
            <sql>
                DROP TABLE TAREFA;
            </sql>
        </rollback>
    </changeSet>

    <changeSet id="1.0.2" author="Eduardo Trentin">
        <preConditions onFail="MARK_RAN">
            <not>
                <sequenceExists sequenceName="SEQ_TAREFA"/>
            </not>
        </preConditions>
        <comment>Padrão para arquitetura de API</comment>
        <sql>
            CREATE SEQUENCE SEQ_TAREFA
            MINVALUE 1
            MAXVALUE 9999999999999999999999999999
            START WITH 1
            INCREMENT BY 1
            NOCACHE
            ORDER;
        </sql>
        <rollback>
            <sql>
                DROP SEQUENCE SEQ_TAREFA;
            </sql>
        </rollback>
    </changeSet>


</databaseChangeLog>
